<%- include('layout/header') %>
<div class="container mt-5">
    <div class="row">
        <div class="col-lg-12">
            <div class="">
                <% if(message){ %>
                    <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                        <%= message.message %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>
                <div class="table-responsive table-dark">
                    <table class="table table-bordered table-striped table-striped ">
                        <thead>
                            <tr class="table-dark">
                                <th scope="col">ID</th>
                                <th scope="col">Image</th>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Phone</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((user,index)=>{ %>
                                <tr>
                                    <td><%= index+1 %></td>
                                    <td><img src="/uploads/<%= user.image %>" alt="wif" class="img-fluid" width="50px" height="50px"></td>
                                    <td><%= user.name %></td>
                                    <td><%= user.email %></td>
                                    <td><%= user.phone %></td>
                                    <td><a href="/edit/<%= user._id %>" class="fas fa-edit text-success ml-2"></a>
                                        <a href="/delete/<%= user._id %>" class="fas fa-trash text-danger ml-5"></a></td>
                                    
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>